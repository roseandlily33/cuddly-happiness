<section>
    <div id="commentHeader">
        <h1>{{post.post_title}}</h1>
        <p>{{post.post_content}}</p>
    </div>
    <div id="commentDiv">
        <h2>Comments:</h2>
        {{#each post.comments as |comment|}}
        <div class="commentEach">
        <h3>{{comment.comment_content}}</h3>
        </div>
        {{/each}}
    </div>
    <div>
        <form class="commentForm">
            <label for="newComment">Leave a comment:</label>
            <input type="text" id="newComment" name="newComment">
            <button id="commentBtn">Submit</button>
        </form>
    </div>
</section>

<script src="/js/comment.js"></script>